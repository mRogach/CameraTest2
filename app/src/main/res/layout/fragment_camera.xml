<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/ivFlash_FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flash_on_white"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANAU TULUM"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_location_on_white"
            android:layout_centerHorizontal="true"
            android:drawablePadding="10dp"/>

        <ImageView
            android:id="@+id/ivChangeCamera_FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_switch_camera_white"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivTakePhoto_FC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/take_photo_image"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

</RelativeLayout>